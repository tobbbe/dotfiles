{
  "alwaysThinkingEnabled": true,
  "respectGitignore": false,
  "permissions": {
    "allow": [
      "Read(~/dev/**)",
      "Glob(~/dev/**)",
      "Grep(~/dev/**)",
      "Read(~/.config/nvim/**)",
      "Glob(~/.config/nvim/**)",
      "Grep(~/.config/nvim/**)",
      "Read(~/.local/share/nvim)",
      "Glob(~/.local/share/nvim)",
      "Grep(~/.local/share/nvim)",
      "Read(~/.local/state/nvim)",
      "Glob(~/.local/state/nvim)",
      "Grep(~/.local/state/nvim)",
      "WebFetch",
      "WebSearch",
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Bash(cd:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(env:*)",
      "Bash(ps:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git remote:*)",
      "Bash(git ls-files:*)",
      "Bash(git rev-parse:*)",
      "Bash(git describe:*)",
      "Bash(git reflog:*)",
      "Bash(git blame:*)",
      "Bash(npm:*)",
      "Bash(yarn:*)",
      "Bash(pnpm:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(nvim:*)",
      "Bash(vim:*)",
      "Bash(jq:*)",
      "Bash(docker:*)",
      "mcp__*"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/load-agentbrain.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "hs -c 'showNotification(\"Claude Code: Finished\")'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "hs -c 'showNotification(\"Claude Code: Needs Help\")'"
          }
        ]
      }
    ]
  }
}
